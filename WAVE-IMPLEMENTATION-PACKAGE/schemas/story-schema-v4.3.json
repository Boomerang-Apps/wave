{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wave.dev/schemas/story-schema-v4.3.json",
  "title": "AI Story Schema V4.3",
  "description": "Schema for AI Stories - V4.3 with configurable domains, context loading, execution control, and enterprise features",
  "type": "object",
  "required": [
    "story_id",
    "title",
    "domain",
    "wave_number",
    "priority",
    "status",
    "objective",
    "acceptance_criteria",
    "files",
    "safety"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema file"
    },
    "schema_version": {
      "type": "string",
      "const": "4.3",
      "description": "Schema version identifier"
    },
    "story_id": {
      "type": "string",
      "pattern": "^[A-Z]+-[A-Z0-9]+-[0-9]{3}$|^[A-Z]+-[0-9]{3}$",
      "description": "Unique story identifier (e.g., WAVE-P1-001, AUTH-001)"
    },
    "title": {
      "type": "string",
      "minLength": 10,
      "maxLength": 100,
      "description": "Clear, concise story title"
    },
    "type": {
      "type": "string",
      "enum": ["feature", "bug", "refactor", "infrastructure", "documentation", "tooling", "security"],
      "description": "Story type classification"
    },
    "domain": {
      "type": "string",
      "description": "Technical domain - should match project's wave-config.json domains"
    },
    "agent": {
      "type": "string",
      "description": "Assigned agent type - should match project's wave-config.json agents"
    },
    "wave_number": {
      "type": "integer",
      "minimum": 0,
      "description": "Implementation wave/phase number"
    },
    "priority": {
      "type": "string",
      "enum": ["P0", "P1", "P2", "P3"],
      "description": "Priority level (P0=Critical, P3=Nice-to-have)"
    },
    "story_points": {
      "type": "integer",
      "minimum": 1,
      "maximum": 21,
      "description": "Fibonacci story points (1,2,3,5,8,13,21)"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "blocked", "review", "complete", "failed"],
      "description": "Current story status"
    },
    "description": {
      "type": "string",
      "minLength": 50,
      "description": "Detailed story description with context"
    },
    "objective": {
      "type": "object",
      "required": ["as_a", "i_want", "so_that"],
      "properties": {
        "as_a": { "type": "string" },
        "i_want": { "type": "string" },
        "so_that": { "type": "string" }
      },
      "description": "User story format objective"
    },
    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "description", "ears_format", "test_approach"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^AC-[0-9]{2}$"
          },
          "description": { "type": "string" },
          "ears_format": {
            "type": "string",
            "pattern": "^(WHEN|WHILE|WHERE|IF) .+ THEN .+",
            "description": "EARS syntax: WHEN/WHILE/WHERE/IF ... THEN ..."
          },
          "threshold": {
            "type": "string",
            "description": "Measurable threshold (e.g., 'latency: <100ms')"
          },
          "test_approach": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["pending", "passed", "failed"]
          }
        }
      }
    },
    "context": {
      "type": "object",
      "description": "Context to load before execution (reduces exploration cost)",
      "properties": {
        "read_files": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files agent MUST read before starting"
        },
        "code_examples": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": { "type": "string" },
              "code": { "type": "string" },
              "file_reference": { "type": "string" }
            }
          },
          "description": "Code patterns to follow"
        },
        "similar_implementations": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Paths to similar features for reference"
        },
        "domain_knowledge": {
          "type": "string",
          "description": "Path to domain documentation"
        }
      }
    },
    "execution": {
      "type": "object",
      "description": "Execution control settings",
      "properties": {
        "max_retries": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 3,
          "description": "Maximum retry attempts before escalation"
        },
        "timeout_minutes": {
          "type": "integer",
          "minimum": 5,
          "maximum": 480,
          "description": "Maximum execution time in minutes"
        },
        "model_tier": {
          "type": "string",
          "enum": ["opus", "sonnet", "haiku"],
          "default": "sonnet",
          "description": "Claude model tier to use"
        },
        "checkpoint_frequency": {
          "type": "string",
          "enum": ["per_subtask", "per_gate", "per_criterion", "on_complete"],
          "default": "per_gate",
          "description": "How often to create checkpoints"
        },
        "parallel_with": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Story IDs that can execute in parallel with this story"
        }
      }
    },
    "subtasks": {
      "type": "array",
      "description": "Breakdown of complex stories into subtasks",
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^ST-[0-9]{2}$"
          },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "estimated_tokens": { "type": "integer" },
          "checkpoint_after": {
            "type": "boolean",
            "default": false
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "complete"]
          }
        }
      }
    },
    "files": {
      "type": "object",
      "required": ["create"],
      "properties": {
        "create": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files to be created"
        },
        "modify": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files to be modified"
        },
        "forbidden": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files that must NOT be modified"
        }
      }
    },
    "design_source": {
      "type": "object",
      "description": "UI design reference (enhanced in V4.3)",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["html_mockup", "storybook", "figma", "screenshot", "wireframe", "none"]
        },
        "path": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "figma_frame_id": { "type": "string" },
        "storybook_story_id": { "type": "string" },
        "components": {
          "type": "array",
          "description": "Component breakdown with props and state",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "type": {
                "type": "string",
                "enum": ["page", "layout", "component", "atom"]
              },
              "props": { "type": "object" },
              "state": {
                "type": "array",
                "items": { "type": "string" }
              },
              "events": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "interactions": {
          "type": "array",
          "description": "User interaction specifications",
          "items": {
            "type": "object",
            "properties": {
              "trigger": { "type": "string" },
              "action": { "type": "string" },
              "target": { "type": "string" }
            }
          }
        },
        "responsive": {
          "type": "object",
          "properties": {
            "mobile": { "type": "string" },
            "tablet": { "type": "string" },
            "desktop": { "type": "string" }
          }
        },
        "accessibility": {
          "type": "object",
          "properties": {
            "wcag_level": {
              "type": "string",
              "enum": ["A", "AA", "AAA"]
            },
            "aria_requirements": {
              "type": "array",
              "items": { "type": "string" }
            },
            "keyboard_navigation": { "type": "boolean" },
            "screen_reader_tested": { "type": "boolean" }
          }
        },
        "verified": { "type": "boolean" },
        "verified_at": { "type": "string", "format": "date-time" },
        "visual_diff_threshold": {
          "type": "number",
          "description": "Acceptable pixel difference percentage"
        }
      }
    },
    "technical_requirements": {
      "type": "object",
      "properties": {
        "database_tables": {
          "type": "array",
          "items": { "type": "string" }
        },
        "api_endpoints": {
          "type": "array",
          "items": { "type": "string" }
        },
        "reuse_components": {
          "type": "array",
          "items": { "type": "string" }
        },
        "reuse_patterns": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "state_management": { "type": "string" },
        "configuration": { "type": "string" }
      }
    },
    "tdd": {
      "type": "object",
      "properties": {
        "test_framework": { "type": "string" },
        "test_files": {
          "type": "array",
          "items": { "type": "string" }
        },
        "coverage_target": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "test_categories": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "count": { "type": "integer" },
              "examples": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "mocking_strategy": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },
    "safety": {
      "type": "object",
      "required": ["stop_conditions"],
      "properties": {
        "stop_conditions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Conditions that should immediately stop execution"
        },
        "escalation_triggers": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Conditions that require human intervention"
        },
        "rollback_plan": {
          "type": "string",
          "description": "How to undo changes if something goes wrong"
        }
      }
    },
    "hazard_analysis": {
      "type": "object",
      "description": "DO-178C inspired hazard analysis",
      "properties": {
        "identified_hazards": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "description": { "type": "string" },
              "severity": {
                "type": "string",
                "enum": ["critical", "major", "minor", "negligible"]
              },
              "likelihood": {
                "type": "string",
                "enum": ["frequent", "probable", "occasional", "remote", "improbable"]
              },
              "mitigation": { "type": "string" }
            }
          }
        },
        "risk_level": {
          "type": "string",
          "enum": ["high", "medium", "low"]
        }
      }
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "required_before": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Stories that must complete before this one"
        },
        "blocks": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Stories that are blocked by this one"
        }
      }
    },
    "traceability": {
      "type": "object",
      "properties": {
        "requirements": {
          "type": "array",
          "items": { "type": "string" }
        },
        "epic": { "type": "string" },
        "related_stories": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "enterprise": {
      "type": "object",
      "description": "Enterprise compliance and approval tracking",
      "properties": {
        "compliance": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["GDPR", "SOC2", "HIPAA", "PCI-DSS", "ISO27001", "none"]
          }
        },
        "sla": {
          "type": "object",
          "properties": {
            "response_time": { "type": "string" },
            "availability": { "type": "string" },
            "throughput": { "type": "string" }
          }
        },
        "approvals_required": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "role": { "type": "string" },
              "approved": { "type": "boolean" },
              "approved_at": { "type": "string", "format": "date-time" },
              "approved_by": { "type": "string" }
            }
          }
        },
        "modification_history": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": { "type": "string", "format": "date-time" },
              "author": { "type": "string" },
              "change_description": { "type": "string" }
            }
          }
        }
      }
    },
    "output": {
      "type": "object",
      "description": "Expected output schema",
      "properties": {
        "files_created": {
          "type": "array",
          "items": { "type": "string" }
        },
        "files_modified": {
          "type": "array",
          "items": { "type": "string" }
        },
        "tests_passing": { "type": "boolean" },
        "coverage_achieved": { "type": "number" },
        "pr_description": { "type": "string" }
      }
    },
    "validation": {
      "type": "object",
      "description": "Automated validation commands",
      "properties": {
        "lint_command": { "type": "string" },
        "test_command": { "type": "string" },
        "build_command": { "type": "string" },
        "type_check_command": { "type": "string" },
        "visual_diff_command": { "type": "string" }
      }
    },
    "gates_completed": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["gate-0", "gate-1", "gate-2", "gate-3", "gate-4", "gate-5", "gate-6", "gate-7"]
      }
    },
    "estimated_tests": { "type": "integer" },
    "estimated_tokens": { "type": "integer" },
    "actual_tokens": { "type": "integer" },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": { "type": "string", "format": "date-time" },
        "created_by": { "type": "string" },
        "updated_at": { "type": "string", "format": "date-time" },
        "agent_assignment": { "type": "string" }
      }
    },
    "notes": { "type": "string" }
  },
  "additionalProperties": false
}
