# MCP Server Environment Variables
# Copy this to .env.mcp and fill in your actual tokens
# Then source it before starting Claude Code: source .env.mcp

# GitHub
export GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_token_here

# Notion (full header JSON string)
export NOTION_AUTH_HEADER='{"Authorization": "Bearer ntn_your_token_here", "Notion-Version": "2022-06-28"}'

# Slack
export SLACK_BOT_TOKEN=xoxb-your-bot-token
export SLACK_TEAM_ID=T1234567890

# PostgreSQL/Supabase
export POSTGRES_CONNECTION_STRING=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres

# Sentry
export SENTRY_AUTH_TOKEN=your-sentry-token
export SENTRY_ORG=your-org-slug

# Supabase (for Supabase MCP - different from Next.js env vars)
export SUPABASE_URL=https://your-project.supabase.co
export SUPABASE_SERVICE_KEY=your-service-role-key

# Vercel (get from https://vercel.com/account/tokens)
export VERCEL_TOKEN=your-vercel-token
