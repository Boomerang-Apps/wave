# WAVE Orchestrator Secrets Template
# Copy to secrets.yaml and fill in actual values
# NEVER commit secrets.yaml to git!

apiVersion: v1
kind: Secret
metadata:
  name: wave-secrets
  namespace: wave-orchestrator
  labels:
    app: wave
    component: orchestrator
type: Opaque
stringData:
  # Anthropic API Key (required)
  anthropic-api-key: "sk-ant-..."

  # xAI/Grok API Key (required)
  xai-api-key: "xai-..."

  # PostgreSQL Connection URL (required)
  postgres-url: "postgresql://wave:wave@wave-postgres:5432/wave_orchestrator"

  # Slack Webhook URL (optional)
  slack-webhook-url: "https://hooks.slack.com/services/..."

---
# To create secrets from command line:
#
# kubectl create secret generic wave-secrets \
#   --namespace=wave-orchestrator \
#   --from-literal=anthropic-api-key="sk-ant-..." \
#   --from-literal=xai-api-key="xai-..." \
#   --from-literal=postgres-url="postgresql://..." \
#   --from-literal=slack-webhook-url="https://hooks.slack.com/..."
