# WAVE v2 Orchestrator Environment Variables
# Copy this to .env and fill in your values

# ═══════════════════════════════════════════════════════════════════════════════
# LLM API KEYS
# ═══════════════════════════════════════════════════════════════════════════════

# Anthropic Claude API (required)
ANTHROPIC_API_KEY=sk-ant-xxx

# xAI Grok API (optional - for CTO Master and Constitutional checks)
GROK_API_KEY=xai-xxx
GROK_MODEL=grok-3

# ═══════════════════════════════════════════════════════════════════════════════
# DATABASE
# ═══════════════════════════════════════════════════════════════════════════════

# PostgreSQL for LangGraph checkpoints
DATABASE_URL=postgresql://wave:wave@localhost:5432/wave_orchestrator

# Redis for pub/sub and caching
REDIS_URL=redis://localhost:6379/0

# ═══════════════════════════════════════════════════════════════════════════════
# OBSERVABILITY
# ═══════════════════════════════════════════════════════════════════════════════

# LangSmith (optional)
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=wave-orchestrator

# Slack notifications (optional)
SLACK_WEBHOOK_URL=

# ═══════════════════════════════════════════════════════════════════════════════
# SAFETY
# ═══════════════════════════════════════════════════════════════════════════════

# Budget limits (per story)
DEFAULT_TOKEN_LIMIT=100000
DEFAULT_COST_LIMIT_USD=10.00

# Constitutional AI
ENABLE_CONSTITUTIONAL_AI=true
ENABLE_GROK_REVIEW=true
