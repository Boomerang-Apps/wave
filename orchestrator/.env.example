# WAVE Orchestrator Environment Configuration
# Copy to .env and fill in values

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-xxxxx

# PostgreSQL Database (State Persistence)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=wave
POSTGRES_USER=wave
POSTGRES_PASSWORD=wave
DATABASE_URL=postgresql://wave:wave@localhost:5432/wave

# Redis (Real-time Pub/Sub & Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Supabase (Optional: Legacy Checkpointing)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Safety Thresholds
CONSTITUTIONAL_BLOCK_THRESHOLD=0.7
CONSTITUTIONAL_ESCALATE_THRESHOLD=0.85

# Budget Limits
DEFAULT_TOKEN_LIMIT=100000
DEFAULT_COST_LIMIT_USD=10.0

# Portal Integration
PORTAL_URL=http://localhost:5173
PORTAL_API_URL=http://localhost:3000
