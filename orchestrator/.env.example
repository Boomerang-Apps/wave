# WAVE Orchestrator Environment Configuration
# Copy to .env and fill in values

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Redis (Real-time updates)
REDIS_URL=redis://localhost:6379

# Supabase (Checkpointing)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Safety Thresholds
CONSTITUTIONAL_BLOCK_THRESHOLD=0.7
CONSTITUTIONAL_ESCALATE_THRESHOLD=0.85

# Budget Limits
DEFAULT_TOKEN_LIMIT=100000
DEFAULT_COST_LIMIT_USD=10.0

# Portal Integration
PORTAL_URL=http://localhost:5173
PORTAL_API_URL=http://localhost:3000
